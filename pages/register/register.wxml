<view class="page-login">
  <form bindsubmit="formSubmit">
    <view class="form-box bg-f mt20">
      <view class="row">
        <view class="row-tit">姓名：</view>
        <view class="rot-ipt">
          <input class="input" confirm-type="done" type="text" placeholder='请填写姓名'></input>
        </view>
      </view>
      <view class="row">
        <view class="row-tit">学号：</view>
        <view class="rot-ipt">
          <input class="input" confirm-type="done" type="number" placeholder='请填写学号'></input>
        </view>
      </view>
      <view class="row">
        <view class="row-tit">学校：</view>
        <view class="rot-ipt">
          <input class="input" confirm-type="done" type="text" value="{{ schoolName }}" disabled></input>
        </view>
      </view>
      <view class="row">
        <view class="row-tit">密码：</view>
        <view class="rot-ipt">
          <input class="input" confirm-type="done" type="text" placeholder='请输入密码'></input>
        </view>
      </view>
      <view class="row">
        <view class="row-tit">电话：</view>
        <view class="rot-ipt">
          <input class="input" confirm-type="done" type="number" placeholder='请输入手机号'></input>
        </view>
      </view>
      <view class="row">
        <view class="row-tit">验证码：</view>
        <view class="rot-ipt">
          <input class="input getCode-ipt" confirm-type="done" type="number" placeholder='请输入短信验证码'></input>
          <button class="getCode" type="default" size="mini" bindtap="defaultTap">获取验证码</button>
        </view>
      </view>
    </view>
    <button formType="submit" class="baseBtn mt100">注册</button>
    <view class="link-register tc mt40">
      注册及同意《大招网用户协议》
    </view>
  </form>
</view>