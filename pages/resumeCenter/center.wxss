.resume-center {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.center-tab {
  display: flex;
  border-top: 1rpx solid #e6e9f3;
}
.center-tab-item {
  flex: 1;
  height: 100rpx;
  font-size: 26rpx;
  color:#313148;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.center-tab-item .notice {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background-color: #fe3f35;
  color: #fff;
  font-size: 22rpx;
}
.center-tab-item::before {
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 1rpx;
  height: 32rpx;
  background-color: #e6e9f3;
}

.center-tab-item.active {
  color: #47dbe2;
}
.center-tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #47dbe2;
}

.resume-list {
  box-sizing: border-box;
  height: calc(100% - 91rpx);
  padding: 0 16rpx 20rpx;
}
.resume-list .resume-item {
  margin-bottom: 20rpx;
}
.resume-list .resume-item:first-child {
  margin-top: 40rpx;
}

