    <view class="filter">
      <checkbox-group class="c-g" bindchange="checkboxChange">
        <label class="checkbox" wx:for="{{items}}" wx:key="key">
          <checkbox class="radio" color="#51d3d9" data-id="{{ item.id }}" value="{{item.name}}" checked="{{item.checked}}" />
          <view class="box {{ ids[item.id]  == (item.id + 1) ?'active':''}}"></view>{{ item.name }}
        </label>
      </checkbox-group>
    </view>
  </view>

  <view class="mt30 bg-f">
    <view class="switch-box">
      <text>选择推送频次</text>
      <view class="arrow-icon">
        <view class="inner"></view>
      </view>
    </view>
    <view class="filter">
      <radio-group class="c-g" bindchange="radioChange">
        <label class="checkbox" wx:for="{{ noticeStep }}" wx:key="key">
          <radio class="radio" color="#51d3d9" data-id="{{ item.id }}" value="{{item.name}}" checked="{{item.checked}}" />
          <view class="box {{id == item.id?'active':''}}"></view>{{item.name}}
        </label>
      </radio-group>
    </view>
  </view>

</view>