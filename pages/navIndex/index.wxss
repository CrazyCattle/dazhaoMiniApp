/* pages/index/index.wxss */
.index {
  padding-bottom: 38rpx;
}
.swiper,
.swiper .slide-image {
  width: 750rpx;
  height: 360rpx;
}
.nav-list {
  display: flex;
  height: 262rpx;
  align-items: center;
  justify-content: center;
}
.nav-list .nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-list .nav-item .img {
  width: 108rpx;
  height: 108rpx;
}
.nav-list .nav-item .txt {
  padding-top: 10rpx;
  font-size: 24rpx;
  color:#313148;
}

.scroll-box {
  height: 386rpx;
}
.scroll-swiper {
  height: 240rpx;
}
.scroll-title {
  display: flex;
  padding: 40rpx 32rpx 30rpx 35rpx;
  justify-content: space-between;
  align-items: center;
  font-family: 'PingFangSC-Medium';
  font-weight: bold;
  font-size: 26rpx;
  color: #313148;
}
.c-more {
  font-size: 22rpx;
  color: #b7bcce;
  font-weight: normal;
}
.c-more .arrow-icon {
  border-left-color: #b7bcce;
}
.scroll-box .slide-image {
  width: 100%;
  height: 100%;
}
.scroll-box swiper-item {
  box-sizing: border-box;
  padding-right: 20rpx;
}
.scroll-box swiper-item:last-child {
  padding-right: 20rpx;
}
.recommend > .tc {
  padding-top: 35rpx;
}
.recommend .title {
  display: inline-block;
  margin-bottom: 10rpx;
  color:#313148;
  letter-spacing:0;
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 26rpx;
  position: relative;
}
.recommend .title::before,
.recommend .title::after {
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height:2rpx;
  background-color: #e6e9f3;
}
.recommend .title::before { left: -40rpx; }
.recommend .title::after { right: -40rpx; }
.r-list-item {
  display: flex;
  align-items: center;
}
.r-list-item .cont {
  flex: 1;
  height: 140rpx;
  padding: 32rpx 50rpx 32rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1rpx solid #eaecf3;
}

.r-list-item .cont > .tit {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.r-list-item .cont .dot {
  width: 40rpx;
  height: 50rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.r-list-item .cont .dot .dotImg {
  display: block;
  width: 100%;
  height:8rpx;
}
.r-list-item .pic {
  width: 140rpx;
  height: 140rpx;
  margin: 0 35rpx;
  border: 1rpx solid #e6e9f3;
  border-radius: 1rpx;
  box-sizing: border-box;
}
.r-list-item .cont .job {
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 30rpx;
  color:#313148;
}
.r-list-item .cont .company {
  width: 490rpx;
  font-size: 26rpx;
  color:#848ca1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.r-list-item .cont .s-desc {
  display: flex;
  justify-content: space-between;
}
.r-list-item .cont .infor {
  font-size: 22rpx;
  color: #848ca1;
}
.more {
  display: flex;
  height: 92rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#47dbe2;
  letter-spacing: 0;
}
.arrow-icon {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 5rpx;
  position: relative;
  border: 10rpx solid transparent;
  border-left-color: #47dbe2;
}
.arrow-icon .inner {
  position: absolute;
  width: 0;
  height: 0;
  left: -9rpx;
  top: 50%;
  transform: translateY(-50%);
  border: 8rpx solid transparent;
  border-left-color: #fff;
}


.noInterest {
  position: absolute;
  right: 0;
  top: 55rpx;
  width: 120rpx;
  text-align: center;
  font-size: 26rpx;
  padding: 15rpx 20rpx;
  color: #848ca1;
  background-color: #f2f2f2;
  border-radius: 3rpx;
  box-shadow: 0 0 0 5rpx rgba(0,0,0,.05);
}