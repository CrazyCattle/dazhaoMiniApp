.search-box {
  padding: 14rpx 16rpx;
}
.search-box .search-input {
  width: 100%;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #848ca1;
  letter-spacing: 0.26rpx;
  border-radius: 2px;
}
.search-box .search {
  width: 22rpx;
  height: 22rpx;
}
.typefilter-box {
  display: flex;
  text-align: center;
}
.typefilter-box .typefilter {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color:  #313148;
}
.typefilter-box .filter-head {
  width: 200rpx;
  
  position: relative;
}
.typefilter-box .filter-head::after {
  content: '';
  position: absolute;
  right: -3rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 26rpx;
  border-right: 3rpx solid #eaecf3;
}
.typefilter-box .filter-head,
.typefilter-box .filter-item {
  line-height: 80rpx;
  font-size: 24rpx;
  color: #313148;
}

.typefilter-box .filter-item .active {
  display: inline-block;
  line-height: 80rpx;
  color: #21c6cd;
  position: relative;
}
.typefilter-box .filter-item .active::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 0;
  bottom: 0;
  left: 0;
  border-bottom: 4rpx solid #21c6cd;  
}

.sort-box {
  display: flex;
}
.sort-box .sort-item {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #848ca1;
  text-align: center;
}


.recommend {
  position: fixed;
  top: 228rpx;
  left: 0;
  width: 100%;
  height: calc(100% - 228rpx);
}
.r-list-item {
  display: flex;
  align-items: center;
}
.r-list-item .cont {
  flex: 1;
  height: 140rpx;
  padding: 32rpx 50rpx 32rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1rpx solid #eaecf3;
}
.r-list-item .pic {
  width: 140rpx;
  height: 140rpx;
  margin: 0 35rpx;
  border: 1rpx solid #e6e9f3;
  border-radius: 1rpx;
  box-sizing: border-box;
}
.r-list-item .cont .job {
  font-family: 'PingFangSC-Semibold';
  font-weight: bold;
  font-size: 30rpx;
  color:#313148;
}
.r-list-item .cont .company {
  width: 490rpx;
  font-size: 26rpx;
  color:#848ca1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.r-list-item .cont .s-desc {
  display: flex;
  justify-content: space-between;
}
.r-list-item .cont .infor {
  font-size: 22rpx;
  color: #848ca1;
}